{
    "$schema": "https://docs.facets.cloud/schemas/jobs/instances/job.schema",
    "apiVersion": "v2",
    "disabled": false,
    "kind": "facets.modules.common.application.job",
    "metadata": {},
    "spec": {
        "env": {
            "PGSQL_PASSWORD": {
              "type": "dynamic",
              "resourceType": "cluster",
              "resourceName": "secrets",
              "attribute": "PGSQL_PASSWORD"
              },
              "PGSQL_HOST": {
                "type": "static",
                "default": "killbill-db1-writer"
              },
              "PGSQL_USER": {
                "type": "dynamic",
                "resourceType": "cluster",
                "resourceName": "secrets",
                "attribute": "PGSQL_USER"
              }
        },
        "permission": [
            {
                "name": "killbill-permissions",
                "resourceType": "mysql",
                "resourceName": "killbill-db",
                "permission": "MANAGEMENT"

                
            }
        ],
        "release": {
            "build": {
                "image": "ibbuu/killbill-postgres:21"
            },
            "strategy": "RollingUpdate"
        },
        "runtime": {
            "size": {
                "value": "small"}
        }
    }
}
